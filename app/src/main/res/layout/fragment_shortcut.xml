<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/ui_base_dimen_margin_padding">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:background="@color/textColorHintLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ui_main_shortcut_activity"
                        android:textSize="@dimen/ui_base_text_size_small" />

                    <com.hlk.hlklib.lib.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-30"
                        android:text="@string/ui_icon_notification_solid"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ui_shortcut_to_group_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@null" />

                <TextView
                    android:id="@+id/ui_shortcut_to_group_activity_nothing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
                    android:text="@string/ui_main_shortcut_loading_group"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_little" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:background="@color/textColorHintLight" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
                android:background="@color/textColorHintLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ui_main_shortcut_archive_group"
                        android:textSize="@dimen/ui_base_text_size_small" />

                    <com.hlk.hlklib.lib.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_icon_document"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ui_shortcut_to_group_archive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@null" />

                <TextView
                    android:id="@+id/ui_shortcut_to_group_archive_nothing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
                    android:text="@string/ui_main_shortcut_loading_group"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_little" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:background="@color/textColorHintLight" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
                android:background="@color/textColorHintLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
                    android:text="@string/ui_main_shortcut_archive_user"
                    android:textSize="@dimen/ui_base_text_size_small" />

                <include layout="@layout/tool_view_archive_create_selector" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:background="@color/textColorHintLight" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
                android:background="@color/textColorHintLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
                    android:text="@string/ui_main_shortcut_moment"
                    android:textSize="@dimen/ui_base_text_size_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ui_shortcut_to_moment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/ui_static_dp_30"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.hlk.hlklib.lib.view.CorneredView
                            android:layout_width="@dimen/ui_archive_creator_selector_icon_size"
                            android:layout_height="@dimen/ui_archive_creator_selector_icon_size"
                            android:elevation="@dimen/ui_base_translationZ_small"
                            android:gravity="center"
                            app:cv_background="@color/color_3eb135"
                            app:cv_background_active="@color/color_3eb135"
                            app:cv_border_size="@dimen/ui_static_dp_zero"
                            app:cv_corner_size="@dimen/ui_archive_creator_selector_icon_size">

                            <com.hlk.hlklib.lib.view.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/ui_icon_moment_add"
                                android:textColor="@color/textColorLight"
                                android:textSize="@dimen/ui_base_text_size_max" />

                        </com.hlk.hlklib.lib.view.CorneredView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ui_static_dp_5"
                            android:text="@string/ui_main_individual_functions_1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_base_border_size_normal"
                android:background="@color/textColorHintLight" />

        </LinearLayout>
    </ScrollView>

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_shortcut_closer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        android:rotation="45"
        android:text="@string/ui_icon_add"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/ui_base_text_size_max" />
</LinearLayout>