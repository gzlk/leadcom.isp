<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/ui_static_dp_8"
            android:paddingBottom="@dimen/ui_static_dp_8">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_icon_group_finance_1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_base_share_dialog_icon_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_static_dp_3"
                android:text="@string/ui_group_finance_1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_base_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/ui_static_dp_8"
            android:paddingBottom="@dimen/ui_static_dp_8">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_icon_group_finance_2"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_share_dialog_icon_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_static_dp_3"
                android:text="@string/ui_group_finance_2"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/ui_static_dp_8"
            android:paddingBottom="@dimen/ui_static_dp_8">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_icon_group_finance_3"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_share_dialog_icon_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_static_dp_3"
                android:text="@string/ui_group_finance_3"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/ui_static_dp_8"
            android:paddingBottom="@dimen/ui_static_dp_8">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_icon_group_finance_4"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_share_dialog_icon_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_static_dp_3"
                android:text="@string/ui_group_finance_4"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/tool_view_half_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include layout="@layout/tool_view_recycler_view_swipe_refreshable" />
    </LinearLayout>
</LinearLayout>