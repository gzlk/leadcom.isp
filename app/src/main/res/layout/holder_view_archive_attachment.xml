<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground">

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_holder_view_archive_attachment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginTop="@dimen/ui_static_dp_5"
        android:elevation="@dimen/ui_base_translationZ"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        app:cv_background="@android:color/white"
        app:cv_background_active="@color/textColorHintLightLight"
        app:cv_background_type="fill"
        app:cv_border_size="@dimen/ui_static_dp_zero"
        app:cv_corner_size="@dimen/ui_base_dimen_margin_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.hlk.hlklib.lib.view.CorneredView
                android:id="@+id/ui_holder_view_archive_attachment_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/ui_static_dp_8"
                app:cv_background="@color/colorPrimary"
                app:cv_background_type="fill"
                app:cv_border_size="@dimen/ui_static_dp_zero"
                app:cv_corner_size="@dimen/ui_base_dimen_button_corner_size">

                <com.hlk.hlklib.lib.view.CustomTextView
                    android:id="@+id/ui_holder_view_archive_attachment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_icon_camera"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ui_base_text_size_large" />
            </com.hlk.hlklib.lib.view.CorneredView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ui_holder_view_archive_attachment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/app_name_default" />

                <TextView
                    android:id="@+id/ui_holder_view_archive_attachment_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_static_dp_2"
                    android:text="@string/app_name_default"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_little" />
            </LinearLayout>
        </LinearLayout>

    </com.hlk.hlklib.lib.view.CorneredView>
</LinearLayout>