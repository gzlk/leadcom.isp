<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/ui_holder_view_talk_team_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:id="@+id/ui_holder_view_talk_team_members_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui_holder_view_talk_team_members"
        android:background="@drawable/ui_background_clickable"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_team_talk_team_member_more"
            android:textColor="@color/textColorHintDark"
            android:textSize="@dimen/ui_base_text_size_small" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_icon_right"
            android:textColor="@color/textColorHintDark"
            android:textSize="@dimen/ui_base_text_size_small" />
    </LinearLayout>
</RelativeLayout>