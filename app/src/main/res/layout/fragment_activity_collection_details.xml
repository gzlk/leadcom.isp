<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_view_recycler_view_swipe_refreshable" />

    <LinearLayout
        android:id="@+id/ui_activity_collection_details_top_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/ui_static_dp_5"
            android:paddingBottom="@dimen/ui_static_dp_5">

            <View
                android:layout_width="@dimen/ui_static_dp_25"
                android:layout_height="@dimen/ui_static_dp_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:minWidth="@dimen/ui_static_dp_60"
                android:text="@string/ui_group_activity_collection_top_member"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:minWidth="@dimen/ui_static_dp_55"
                android:text="@string/ui_group_activity_collection_top_status"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ui_group_activity_collection_top_additional"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_little" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_static_dp_5"
                android:gravity="center"
                android:minWidth="@dimen/ui_static_dp_35"
                android:text="@string/ui_group_activity_collection_top_time"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />
        </LinearLayout>

        <include layout="@layout/tool_view_half_line_horizontal" />
    </LinearLayout>

</RelativeLayout>