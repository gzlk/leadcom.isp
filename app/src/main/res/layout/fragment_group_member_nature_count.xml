<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tool_view_view_pager" />

    <LinearLayout
        android:id="@+id/ui_fragment_group_member_nature_count_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ui_static_dp_20"
        android:gravity="center">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_5"
            android:text="@string/ui_icon_radio_unselected"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/ui_base_text_size_little" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_icon_radio_disabled"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_little" />
    </LinearLayout>
</RelativeLayout>