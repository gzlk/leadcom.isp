<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ui_holder_view_simple_clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_background_clickable"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="@dimen/ui_base_dimen_button_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/ui_base_dimen_margin_padding"
        android:paddingEnd="@dimen/ui_base_dimen_margin_padding">

        <com.leadcom.android.isp.lib.view.ImageDisplayer
            android:id="@+id/ui_holder_view_finance_collect_image"
            android:layout_width="@dimen/ui_base_user_header_image_size_small"
            android:layout_height="@dimen/ui_base_user_header_image_size_small"
            android:layout_marginTop="@dimen/ui_static_dp_5"
            android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
            android:layout_marginBottom="@dimen/ui_static_dp_5"
            android:visibility="gone"
            app:id_image_src="@mipmap/img_image_default"
            app:id_image_type="oval" />

        <TextView
            android:id="@+id/ui_holder_view_finance_collect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/ui_static_dp_50"
            android:maxLength="3"
            android:minWidth="@dimen/ui_static_dp_50"
            android:text="@string/app_name_default"
            android:textSize="@dimen/ui_base_text_size_small" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ui_holder_view_finance_collect_payment"
            android:layout_width="0dp"
            android:layout_height="@dimen/ui_base_dimen_button_height"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="@string/app_name_default"
            android:textColor="@color/color_3eb135"
            android:textSize="@dimen/ui_base_text_size_small"
            app:autoSizeMaxTextSize="@dimen/ui_base_text_size_small"
            app:autoSizeTextType="uniform" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ui_holder_view_finance_collect_expend"
            android:layout_width="0dp"
            android:layout_height="@dimen/ui_base_dimen_button_height"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="@string/app_name_default"
            android:textColor="@color/colorCaution"
            android:textSize="@dimen/ui_base_text_size_small"
            app:autoSizeMaxTextSize="@dimen/ui_base_text_size_small"
            app:autoSizeTextType="uniform" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ui_holder_view_finance_collect_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/ui_base_dimen_button_height"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="@string/app_name_default"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_small"
            app:autoSizeMaxTextSize="@dimen/ui_base_text_size_small"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <include layout="@layout/tool_view_half_line_horizontal" />
</LinearLayout>