<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hlk.hlklib.lib.view.ClearEditText
        android:id="@+id/ui_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cet_edit_count_input="true"
        app:cet_edit_count_input_text_size="@dimen/ui_base_text_size_tiny"
        app:cet_edit_hint="@string/ui_text_feedback_content_hint"
        app:cet_edit_max_lines="5"
        app:cet_edit_maximum_height="@dimen/ui_static_dp_250"
        app:cet_edit_minimum_height="@dimen/ui_static_dp_200"
        app:cet_edit_padding="@dimen/ui_base_dimen_margin_padding"
        app:cet_edit_value_extract_regex="@string/regex_normal_long_input_filter"
        app:cet_edit_value_max_length="@integer/integer_activity_introduction_max_length"
        app:cet_edit_value_verify_regex="@string/regex_normal_long_input_verify" />

    <include layout="@layout/tool_view_half_line_horizontal" />

    <com.hlk.hlklib.lib.view.CorneredButton
        android:id="@+id/ui_feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_static_dp_12"
        android:layout_marginStart="@dimen/ui_static_dp_12"
        android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:minHeight="@dimen/ui_base_dimen_button_height"
        android:text="@string/ui_base_text_commit"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/ui_base_text_size_big"
        app:active_color="@color/buttonActivityColor"
        app:corner_size="@dimen/ui_base_dimen_button_corner_size"
        app:disable_when_click="true"
        app:normal_color="@color/buttonNormalColor" />

</LinearLayout>