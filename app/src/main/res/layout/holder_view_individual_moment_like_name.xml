<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_individual_moment_like_name_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/ui_base_user_header_image_size_small"
        android:layout_height="@dimen/ui_static_dp_5"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.hlk.hlklib.lib.view.ChatBalloon
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cb_arrow_height="@dimen/ui_static_dp_5"
            app:cb_arrow_margin="@dimen/ui_base_dimen_margin_padding"
            app:cb_arrow_side="topLeft"
            app:cb_arrow_width="@dimen/ui_static_dp_10"
            app:cb_background_active="@color/textColorHintLightLight"
            app:cb_background_normal="@color/textColorHintLightLight"
            app:cb_border_size="@dimen/ui_static_dp_zero"
            app:cb_corner_size="@dimen/ui_static_dp_zero">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:id="@+id/ui_holder_view_individual_moment_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ui_static_dp_5"
                android:text="@string/ui_icon_heart_hollow"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/ui_holder_view_individual_moment_like_names"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingBottom="@dimen/ui_static_dp_3"
                android:paddingTop="@dimen/ui_static_dp_3"
                android:text="@string/app_name_default"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_base_text_size_small" />
        </com.hlk.hlklib.lib.view.ChatBalloon>

        <include
            android:id="@+id/ui_holder_view_individual_moment_like_name_line"
            layout="@layout/tool_view_half_line_horizontal_dark"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>