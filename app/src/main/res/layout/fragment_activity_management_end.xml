<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_activity_details_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_static_dp_200"
        app:id_image_scale_type="centerCrop"
        app:id_image_src="@mipmap/img_image_default" />

    <include
        android:id="@+id/ui_activity_details_title"
        layout="@layout/holder_view_simple_clickable" />

    <include
        android:id="@+id/ui_activity_details_time"
        layout="@layout/holder_view_simple_clickable" />

    <include
        android:id="@+id/ui_activity_details_address"
        layout="@layout/holder_view_simple_clickable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.hlk.hlklib.lib.view.CorneredButton
        android:id="@+id/ui_activity_details_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginEnd="@dimen/ui_static_dp_12"
        android:layout_marginStart="@dimen/ui_static_dp_12"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="@dimen/ui_base_dimen_button_height"
        android:text="@string/ui_activity_details_button_close_text"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/ui_base_text_size_big"
        app:active_color="@color/buttonActivityColor"
        app:corner_size="@dimen/ui_base_dimen_button_corner_size"
        app:disable_when_click="false"
        app:normal_color="@color/buttonNormalColor" />

</LinearLayout>