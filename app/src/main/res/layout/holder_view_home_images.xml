<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_holder_view_home_images"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:orientation="vertical">

    <include layout="@layout/tool_view_view_pager_embedded" />

    <LinearLayout
        android:id="@+id/ui_holder_view_archive_watermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ui_holder_view_home_image_title"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent_40"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/ui_static_dp_3"
        android:visibility="gone">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_group_header_minmeng_flag"
            android:textColor="@color/color_fcf023"
            android:textSize="@dimen/ui_base_text_size_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/ui_holder_view_home_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_40"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="3"
        android:paddingBottom="@dimen/ui_static_dp_8"
        android:paddingEnd="@dimen/ui_static_dp_5"
        android:paddingStart="@dimen/ui_static_dp_5"
        android:paddingTop="@dimen/ui_static_dp_5"
        android:singleLine="true"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/ui_base_text_size_big" />

    <LinearLayout
        android:id="@+id/ui_holder_view_home_image_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/ui_static_dp_1"
        android:paddingEnd="@dimen/ui_static_dp_5"
        android:paddingStart="@dimen/ui_static_dp_5">

    </LinearLayout>
</RelativeLayout>