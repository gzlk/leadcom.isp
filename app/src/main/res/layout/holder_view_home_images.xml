<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_holder_view_home_images"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:orientation="vertical">

    <include layout="@layout/tool_view_view_pager_embedded" />

    <TextView
        android:id="@+id/ui_holder_view_home_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ui_holder_view_home_image_indicator"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/ui_static_dp_5"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ui_base_text_size_large" />

    <LinearLayout
        android:id="@+id/ui_holder_view_home_image_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/ui_base_dimen_margin_padding">

    </LinearLayout>
</RelativeLayout>