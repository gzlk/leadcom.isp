<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_group_squad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:background="@drawable/ui_background_clickable"
    android:gravity="center_vertical"
    android:orientation="vertical"
    app:layout_itemType="main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/ui_holder_view_group_squad_blank"
            android:layout_width="@dimen/ui_static_dp_1"
            android:layout_height="@dimen/ui_static_dp_40" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_group_squad_picker"
            android:layout_width="@dimen/ui_static_dp_35"
            android:layout_height="@dimen/ui_static_dp_35"
            android:gravity="center"
            android:text="@string/ui_icon_select_solid"
            android:textColor="@color/textColorHintLight"
            android:textSize="@dimen/ui_base_text_size_big"
            android:visibility="gone" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_group_squad_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_static_dp_10"
            android:layout_marginEnd="@dimen/ui_static_dp_10"
            android:gravity="center_vertical"
            android:minHeight="@dimen/ui_static_dp_30"
            android:text="@string/ui_icon_group"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_huge" />

        <TextView
            android:id="@+id/ui_holder_view_group_squad_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/ui_static_dp_35"
            android:text="@string/app_name_default" />

        <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
            android:id="@+id/ui_holder_view_group_squad_loading"
            android:layout_width="@dimen/ui_static_dp_30"
            android:layout_height="@dimen/ui_static_dp_30"
            android:layout_gravity="center"
            android:visibility="gone"
            app:mlpb_enable_circle_background="false"
            app:mlpb_progress_color="@color/colorProgressing"
            app:mlpb_progress_stoke_width="@dimen/ui_static_dp_2"
            app:mlpb_progress_text_visibility="invisible" />

        <TextView
            android:id="@+id/ui_holder_view_group_squad_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_10"
            android:text="@string/app_name_default"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/ui_base_text_size_small" />

    </LinearLayout>

    <include layout="@layout/tool_view_half_line_horizontal" />

</LinearLayout>