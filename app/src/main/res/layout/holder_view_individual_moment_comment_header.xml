<?xml version="1.0" encoding="utf-8"?>
<com.hlk.hlklib.lib.view.CorneredView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
    android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
    android:orientation="horizontal"
    android:padding="@dimen/ui_static_dp_5"
    app:cv_active_border="@color/colorPrimary"
    app:cv_background="@color/color_f3f3f5"
    app:cv_background_active="@color/color_e9e9e9"
    app:cv_background_type="fill"
    app:cv_border_size="@dimen/ui_base_border_size_normal"
    app:cv_normal_border="@android:color/transparent">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_moment_comment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_static_dp_5"
        android:text="@string/ui_icon_comment"
        android:textColor="@color/colorPrimary" />

    <com.gzlk.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_holder_view_moment_comment_header"
        android:layout_width="@dimen/ui_base_user_header_image_size_small"
        android:layout_height="@dimen/ui_base_user_header_image_size_small"
        android:layout_marginEnd="@dimen/ui_static_dp_5"
        app:id_image_src="@mipmap/img_default_user_header"
        app:id_show_header="true" />

    <LinearLayout
        android:id="@+id/ui_holder_view_moment_comment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ui_holder_view_moment_comment_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name_default" />

            <TextView
                android:id="@+id/ui_holder_view_moment_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHintLight"
                android:textSize="@dimen/ui_base_text_size_little" />

            <com.hlk.hlklib.lib.view.CustomTextView
                android:id="@+id/ui_holder_view_moment_comment_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_static_dp_5"
                android:text="@string/ui_icon_delete"
                android:textColor="@color/colorCaution"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/ui_holder_view_moment_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name_default"
            android:textColor="@color/textColorHintDark"
            android:textSize="@dimen/ui_base_text_size_small" />

    </LinearLayout>
</com.hlk.hlklib.lib.view.CorneredView>