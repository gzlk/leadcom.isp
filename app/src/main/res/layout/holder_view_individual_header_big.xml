<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_background_individual_header"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/ui_static_dp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.leadcom.android.isp.lib.view.ImageDisplayer
            android:id="@+id/ui_holder_view_user_header"
            android:layout_width="@dimen/ui_static_dp_100"
            android:layout_height="@dimen/ui_static_dp_100"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/ui_base_dimen_margin_padding"
            app:id_image_src="@drawable/img_default_user_header"
            app:id_image_type="oval"
            app:id_nullable_drawable="true"
            app:id_show_header="true" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_user_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ui_holder_view_user_header"
            android:layout_marginStart="-20dp"
            android:layout_toEndOf="@+id/ui_holder_view_user_header"
            android:text="@string/ui_icon_camera_hollow"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/ui_base_text_size_big"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ui_holder_view_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/ui_base_text_size_big" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_user_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ui_holder_view_user_name"
            android:layout_marginStart="@dimen/ui_static_dp_5"
            android:layout_toEndOf="@+id/ui_holder_view_user_name"
            android:text="@string/ui_icon_edit"
            android:textColor="@color/textColorLight"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ui_holder_view_user_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ui_holder_view_user_name"
            android:layout_marginTop="@dimen/ui_static_dp_3"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/textColorLight" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_static_dp_20" />
</LinearLayout>