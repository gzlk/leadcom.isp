<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_holder_view_expand_collapse_clicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_background_clickable"
    android:gravity="center"
    android:orientation="vertical">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_expand_collapse_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/ui_base_user_header_image_size_small"
        android:rotation="0"
        android:text="@string/ui_icon_more_double_up"
        android:textColor="@color/textColorPrimary" />

    <include layout="@layout/tool_view_half_line_horizontal" />
</LinearLayout>