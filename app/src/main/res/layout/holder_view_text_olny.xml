<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_text_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/ui_static_dp_zero"
    app:cardElevation="@dimen/ui_static_dp_zero">

    <TextView
        android:id="@+id/ui_holder_view_text_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:minHeight="@dimen/ui_base_dimen_button_height"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        android:text="@string/app_name" />

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_text_item_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/ui_static_dp_10"
        android:text="@string/ui_icon_select_line"
        android:textColor="@color/textColorHintLight"
        android:textSize="@dimen/ui_base_text_size_big"
        android:visibility="gone" />

    <View
        android:id="@+id/ui_holder_view_text_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_base_border_size_normal"
        android:layout_gravity="bottom"
        android:background="@color/textColorHintLight" />
</android.support.v7.widget.CardView>