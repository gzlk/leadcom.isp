<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_base_dimen_simple_item_height"
    android:orientation="vertical">

    <com.leadcom.android.isp.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ui_holder_view_contact_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/holder_view_simple_clickable_gravity_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/ui_base_dimen_simple_item_height"
            android:orientation="horizontal">

            <include layout="@layout/tool_view_list_item_deletable_button" />
        </LinearLayout>

    </com.leadcom.android.isp.view.SwipeItemLayout>
</LinearLayout>