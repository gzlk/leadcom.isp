<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:cv_background="@color/textColorHintLight"
        app:cv_border_size="0dp">

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_dialog_moment_details_button_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_base_border_size_normal"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_text_moment_details_button_privacy"
            android:textColor="@color/textColor"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_dialog_moment_details_button_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_base_border_size_normal"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_text_moment_details_button_favorite"
            android:textColor="@color/textColor"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_dialog_moment_details_button_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_base_border_size_normal"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_base_text_share"
            android:textColor="@color/textColor"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_dialog_moment_details_button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_base_border_size_normal"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_text_moment_details_button_save"
            android:textColor="@color/textColor"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_dialog_moment_details_button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_base_text_delete"
            android:textColor="@color/textColor"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_dialog_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
            android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_base_text_cancel"
            android:textColor="@color/textColor"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

    </com.hlk.hlklib.lib.view.CorneredView>

</LinearLayout>