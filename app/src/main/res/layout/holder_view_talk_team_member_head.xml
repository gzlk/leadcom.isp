<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_talk_team_member_head_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_holder_view_talk_team_member_head"
        android:layout_width="@dimen/ui_static_dp_60"
        android:layout_height="@dimen/ui_static_dp_60"
        app:id_image_scale_type="centerCrop"
        app:id_image_src="@mipmap/img_default_user_header"
        app:id_image_type="rounded"
        app:id_show_header="true" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_holder_view_talk_team_member_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ui_holder_view_talk_team_member_head"
        android:layout_alignEnd="@+id/ui_holder_view_talk_team_member_head"
        android:gravity="center"
        android:padding="@dimen/ui_static_dp_5"
        android:visibility="gone"
        app:cv_active_border="@color/textColorHintLightLightLight"
        app:cv_background="@color/colorBorderActive"
        app:cv_background_active="@color/colorBorderActive"
        app:cv_background_type="fill"
        app:cv_border_size="@dimen/ui_static_dp_2"
        app:cv_corner_size="@dimen/ui_static_dp_50"
        app:cv_normal_border="@color/textColorHintLightLightLight">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="@dimen/ui_static_dp_12"
            android:layout_height="@dimen/ui_static_dp_12"
            android:gravity="center"
            android:text="@string/ui_icon_group_manager"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ui_base_text_size_little" />

    </com.hlk.hlklib.lib.view.CorneredView>

    <TextView
        android:id="@+id/ui_holder_view_talk_team_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ui_holder_view_talk_team_member_head"
        android:layout_alignStart="@+id/ui_holder_view_talk_team_member_head"
        android:layout_below="@+id/ui_holder_view_talk_team_member_head"
        android:layout_marginTop="@dimen/ui_static_dp_5"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="4"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/textColorHintDark"
        android:textSize="@dimen/ui_base_text_size_small" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_holder_view_talk_team_member_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ui_holder_view_talk_team_member_name"
        android:layout_alignEnd="@+id/ui_holder_view_talk_team_member_head"
        android:layout_alignTop="@+id/ui_holder_view_talk_team_member_head"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:visibility="gone"
        app:cv_active_border="@color/textColorHint"
        app:cv_background="@color/transparent_80_white"
        app:cv_background_active="@color/transparent_80_white"
        app:cv_background_type="fill"
        app:cv_border_size="@dimen/ui_static_dp_zero"
        app:cv_left_top_corner="@dimen/ui_base_dimen_margin_padding"
        app:cv_normal_border="@color/textColorHint"
        app:cv_right_top_corner="@dimen/ui_base_dimen_margin_padding">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_talk_team_member_mask_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_icon_subtract_solid"
            android:textColor="@color/colorCaution"
            android:textSize="@dimen/ui_base_text_size_max" />
    </com.hlk.hlklib.lib.view.CorneredView>
</RelativeLayout>