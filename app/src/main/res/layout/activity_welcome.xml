<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_welcome_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ui_static_dp_30">

        <include layout="@layout/tool_view_app_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical" />

    <com.hlk.hlklib.lib.view.CorneredButton
        android:id="@+id/ui_welcome_to_join_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
        android:alpha="0"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:gravity="center"
        android:minWidth="@dimen/ui_static_dp_100"
        android:padding="@dimen/ui_static_dp_5"
        android:text="@string/ui_base_text_welcome_button"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/ui_base_text_size"
        app:active_color="@color/colorAccent"
        app:background_type="border"
        app:corner_size="@dimen/ui_static_dp_10"
        app:disable_when_click="false"
        app:normal_color="@color/buttonNormalColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_company_name"
        android:textSize="@dimen/ui_base_text_size_little" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
        android:gravity="center"
        android:text="@string/app_company_website"
        android:textSize="@dimen/ui_base_text_size_little" />

</LinearLayout>