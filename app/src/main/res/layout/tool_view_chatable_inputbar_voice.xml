<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <com.hlk.hlklib.lib.voice.VoiceRecordButton
        android:id="@+id/ui_chat_bar_recorder"
        android:layout_width="@dimen/ui_static_dp_80"
        android:layout_height="@dimen/ui_static_dp_80"
        android:layout_margin="@dimen/ui_base_dimen_margin_padding"
        android:gravity="center"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/ui_base_text_size_small"
        android:translationZ="@dimen/ui_base_translationZ"
        app:active_color="@color/colorPrimary"
        app:corner_size="@dimen/ui_static_dp_40"
        app:maximum_time_limit="120000"
        app:minimum_time_limit="1000"
        app:normal_color="@color/colorPrimary" />

</LinearLayout>