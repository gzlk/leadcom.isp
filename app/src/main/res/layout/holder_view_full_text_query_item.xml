<?xml version="1.0" encoding="utf-8"?>
<com.hlk.hlklib.lib.view.CorneredView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_full_text_query_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ui_base_dimen_margin_padding"
    app:cv_active_border="@color/colorPrimary"
    app:cv_background="@android:color/white"
    app:cv_background_active="@color/textColorHintLight"
    app:cv_background_type="fill"
    app:cv_border_size="@dimen/ui_base_border_size_normal"
    app:cv_normal_border="@android:color/white">

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_holder_view_full_text_query_item_image_oval"
        android:layout_width="@dimen/ui_base_user_header_image_size"
        android:layout_height="@dimen/ui_base_user_header_image_size"
        android:visibility="gone"
        app:id_image_scale_type="centerCrop"
        app:id_image_src="@mipmap/img_default_user_header"
        app:id_image_type="oval"
        app:id_show_header="true" />

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_holder_view_full_text_query_item_image_round"
        android:layout_width="@dimen/ui_base_user_header_image_size"
        android:layout_height="@dimen/ui_base_user_header_image_size"
        android:visibility="gone"
        app:id_image_scale_type="centerCrop"
        app:id_image_src="@mipmap/img_image_default"
        app:id_image_type="rounded" />

    <TextView
        android:id="@+id/ui_holder_view_full_text_query_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
        android:text="@string/app_name_default"
        android:textSize="@dimen/ui_base_text_size_big" />

</com.hlk.hlklib.lib.view.CorneredView>