<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_itemType="main">

    <LinearLayout
        android:id="@+id/ui_holder_view_activity_notice_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_base_border_size_normal"
        android:background="@drawable/ui_background_clickable"
        android:gravity="center_vertical"
        android:minHeight="@dimen/ui_base_dimen_button_height"
        android:orientation="horizontal"
        android:padding="@dimen/ui_base_dimen_margin_padding">

        <TextView
            android:id="@+id/ui_holder_view_activity_notice_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_holder_view_activity_notice_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />

            <TextView
                android:id="@+id/ui_holder_view_activity_notice_item_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_base_border_size_normal"
        android:layout_below="@+id/ui_holder_view_activity_notice_item"
        android:background="@color/windowBackground" />
</RelativeLayout>