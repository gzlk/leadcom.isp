<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_base_dimen_button_height"
    android:background="@color/color_f5f7f9"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ui_tool_individual_main_functions_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ui_main_individual_functions_1" />

    <RelativeLayout
        android:id="@+id/ui_tool_individual_main_functions_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/ui_tool_individual_main_functions_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/ui_main_individual_functions_2" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_tool_individual_main_functions_2_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ui_tool_individual_main_functions_2_text"
            android:layout_toEndOf="@+id/ui_tool_individual_main_functions_2_text"
            android:rotation="90"
            android:text="@string/ui_icon_right"
            android:textSize="@dimen/ui_base_text_size_little" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ui_tool_individual_main_functions_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ui_main_individual_functions_3" />

    <TextView
        android:id="@+id/ui_tool_individual_main_functions_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>