<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_tool_organization_concerned_pager_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/ui_static_dp_8">

    <com.gzlk.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_tool_organization_concerned_pager_logo"
        android:layout_width="@dimen/ui_static_dp_60"
        android:layout_height="@dimen/ui_static_dp_60"
        app:id_image_src="@mipmap/img_image_default"
        app:id_image_type="oval" />

    <TextView
        android:id="@+id/ui_tool_organization_concerned_pager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_static_dp_5"
        android:ellipsize="middle"
        android:gravity="center_horizontal"
        android:maxLength="8"
        android:text="@string/app_name"
        android:textSize="@dimen/ui_base_text_size_small" />
</LinearLayout>