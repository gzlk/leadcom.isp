<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
    android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
    android:background="@color/color_f3f3f5"
    android:orientation="horizontal"
    android:padding="@dimen/ui_static_dp_5">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:text="@string/ui_icon_heart_hollow"
        android:textColor="@color/colorPrimary" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/ui_holder_view_individual_moment_praises"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:flexWrap="wrap">

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>