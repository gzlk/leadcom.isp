<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/ui_base_dimen_simple_item_height">

        <FrameLayout
            android:id="@+id/ui_fragment_main_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <cn.label.library.LabelView
        app:backgroundColor="#ff4d32"
        app:labelCenterPadding="8dp"
        app:labelTopPadding="15dp"
        app:textContent="爆款热销"
        app:textContentSize="14sp"
        app:textContentStyle="bold"
        app:textTitle="12:24"
        app:textTitleSize="9sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/tool_view_main_bottom_menu" />
</RelativeLayout>