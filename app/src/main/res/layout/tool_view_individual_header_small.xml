<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.gzlk.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_individual_header_image"
        android:layout_width="@dimen/ui_base_user_header_image_size"
        android:layout_height="@dimen/ui_base_user_header_image_size"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        app:id_image_src="@mipmap/img_default_user_header"
        app:id_image_type="oval"
        app:id_show_header="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ui_individual_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="15"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="@dimen/ui_base_text_size_small"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>