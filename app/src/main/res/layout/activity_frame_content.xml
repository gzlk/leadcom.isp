<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/activity_warning_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ui_static_dp_8"
        android:visibility="gone">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_5"
            android:text="@string/ui_icon_caution_oval"
            android:textColor="@color/color_facd98" />

        <TextView
            android:id="@+id/activity_warning_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name_default"
            android:textColor="@color/colorCaution"
            android:textSize="@dimen/ui_base_text_size_short" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
