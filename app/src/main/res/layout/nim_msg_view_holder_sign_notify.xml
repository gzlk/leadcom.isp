<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_message_item_round_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ui_base_dimen_margin_padding">

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/message_item_sign_notify_icon_container"
        android:layout_width="@dimen/ui_nim_app_icon_size"
        android:layout_height="@dimen/ui_nim_app_icon_size"
        android:layout_marginEnd="@dimen/ui_static_dp_5"
        android:gravity="center"
        android:orientation="vertical"
        app:cv_background="@color/color_3eb135"
        app:cv_background_active="@color/color_3eb135"
        app:cv_background_type="fill"
        app:cv_border_size="@dimen/ui_static_dp_zero"
        app:cv_corner_size="@dimen/ui_base_dimen_button_corner_size">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/message_item_sign_notify_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ui_icon_material_location"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/ui_nim_app_icon_text_size"
            app:ctv_source="material_icon" />
    </com.hlk.hlklib.lib.view.CorneredView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_item_sign_notify_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxWidth="@dimen/ui_nim_max_text_bubble_width"
            android:text="@string/app_name_default"
            android:textSize="@dimen/ui_base_text_size_small" />

        <TextView
            android:id="@+id/message_item_sign_notify_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/ui_nim_max_text_bubble_width"
            android:text="@string/app_name_default"
            android:textColor="@color/textColorHintDark"
            android:textSize="@dimen/ui_base_text_size_little" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_icon_material_timer"
                android:textColor="@color/textColorHintDark"
                app:ctv_source="material_icon" />

            <TextView
                android:id="@+id/message_item_sign_notify_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_icon_location"
                android:textColor="@color/textColorHintDark" />

            <TextView
                android:id="@+id/message_item_sign_notify_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:maxWidth="@dimen/ui_nim_max_text_bubble_width"
                android:singleLine="true"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>