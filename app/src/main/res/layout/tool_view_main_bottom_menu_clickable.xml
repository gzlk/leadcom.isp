<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ui_tool_main_bottom_clickable_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ui_tool_main_bottom_clickable_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/ui_tool_main_bottom_clickable_center"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/ui_tool_main_bottom_clickable_center_icon"
            android:layout_width="@dimen/ui_static_dp_40"
            android:layout_height="@dimen/ui_static_dp_40"
            android:layout_centerInParent="true"
            android:background="@drawable/ui_background_oval_primary"
            android:padding="@dimen/ui_static_dp_5">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ui_icon_add"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ui_base_text_size_large" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ui_tool_main_bottom_clickable_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ui_tool_main_bottom_clickable_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical" />
</LinearLayout>