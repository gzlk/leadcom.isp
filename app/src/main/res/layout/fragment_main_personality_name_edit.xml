<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:paddingTop="@dimen/ui_base_dimen_margin_padding">

    <com.hlk.hlklib.lib.view.CorneredEditText
        android:id="@+id/ui_main_personality_name_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="@string/ui_text_personality_name_edit_name_hint"
        android:minHeight="@dimen/ui_base_dimen_button_height"
        android:padding="@dimen/ui_static_dp_8"
        app:cet_border_size="@dimen/ui_static_dp_zero" />

    <com.hlk.hlklib.lib.view.ClearEditText
        android:id="@+id/ui_main_personality_name_edit_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui_main_personality_name_edit_name"
        android:layout_marginTop="@dimen/ui_base_border_size_normal"
        app:cet_edit_count_input="true"
        app:cet_edit_count_input_text_color="@color/textColorHint"
        app:cet_edit_count_input_text_size="@dimen/ui_base_text_size_tiny"
        app:cet_edit_hint="@string/ui_text_personality_name_edit_intro_hint"
        app:cet_edit_max_lines="15"
        app:cet_edit_maximum_height="@dimen/ui_static_dp_180"
        app:cet_edit_minimum_height="@dimen/ui_static_dp_120"
        app:cet_edit_padding="@dimen/ui_static_dp_8"
        app:cet_edit_value_max_length="@integer/integer_activity_introduction_max_length" />

</RelativeLayout>