<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_nim_activity_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_background_clickable">

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_nim_activity_list_item_image"
        android:layout_width="@dimen/ui_base_dimen_button_height"
        android:layout_height="@dimen/ui_base_dimen_button_height"
        android:layout_margin="@dimen/ui_static_dp_5"
        app:id_image_src="@drawable/img_default_app_icon"
        app:id_image_type="oval" />

    <TextView
        android:id="@+id/ui_nim_activity_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:layout_toEndOf="@+id/ui_nim_activity_list_item_image"
        android:text="@string/app_name_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ui_nim_activity_list_item_name"
        android:layout_below="@+id/ui_nim_activity_list_item_image">

        <include layout="@layout/tool_view_half_line_horizontal" />
    </LinearLayout>
</RelativeLayout>