<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:layout_width="@dimen/ui_static_dp_280"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        app:cv_border_size="@dimen/ui_static_dp_zero"
        app:cv_corner_size="@dimen/ui_base_dimen_margin_padding">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_static_dp_80"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/ui_icon_select_big_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/ui_static_dp_20"
            android:text="@string/ui_base_share_to_app_success" />

        <TextView
            android:id="@+id/ui_dialog_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_20"
            android:layout_marginTop="@dimen/ui_static_dp_8"
            android:gravity="end"
            android:text="@string/ui_base_share_to_app_return_to_chat"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/ui_dialog_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
            android:layout_marginEnd="@dimen/ui_static_dp_20"
            android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
            android:gravity="end"
            android:text="@string/ui_base_share_to_app_return_to_archive"
            android:textColor="@color/colorPrimary" />
    </com.hlk.hlklib.lib.view.CorneredView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>