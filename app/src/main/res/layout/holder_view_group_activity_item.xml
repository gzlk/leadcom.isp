<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ui_holder_view_group_activity_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_holder_view_group_activity_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
                android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
                android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="5"
                android:singleLine="true"
                android:text="@string/app_name_default" />

            <TextView
                android:id="@+id/ui_holder_view_group_activity_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
                android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/ui_holder_view_group_activity_item_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
            android:text="@string/ui_base_text_not_read"
            android:textColor="@color/colorCaution"
            android:textSize="@dimen/ui_base_text_size_little" />
    </LinearLayout>

    <include layout="@layout/tool_view_half_line_horizontal" />
</LinearLayout>