<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_tool_view_simple_inputable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ui_static_dp_5"
    android:visibility="gone">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_static_dp_8"
        android:text="@string/ui_icon_edit_pen_solid"
        android:textColor="@color/textColorHintDark"
        android:textSize="@dimen/ui_base_text_size_large" />

    <com.hlk.hlklib.lib.view.ClearEditText
        android:id="@+id/ui_tool_view_simple_inputable_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cet_edit_corner_size="@dimen/ui_static_dp_5"
        app:cet_edit_hint="@string/ui_text_archive_details_comment_hint"
        app:cet_edit_max_lines="5"
        app:cet_edit_normal_border="@color/textColorHintLight"
        app:cet_edit_padding="@dimen/ui_static_dp_5" />

    <com.hlk.hlklib.lib.view.CorneredButton
        android:id="@+id/ui_tool_view_simple_inputable_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="@dimen/ui_base_dimen_chat_bar_height"
        android:minWidth="65dp"
        android:text="@string/ui_base_text_send"
        android:textColor="@color/ui_text_normal_white"
        android:visibility="gone"
        app:active_color="@android:color/holo_red_dark"
        app:corner_size="@dimen/ui_base_dimen_button_corner_size"
        app:normal_color="@color/colorPrimary" />

</LinearLayout>