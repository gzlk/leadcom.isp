<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_tool_view_simple_inputable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/ui_tool_view_simple_inputable_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:text="@string/app_name_default"
        android:textColor="@color/textColorHint"
        android:textSize="@dimen/ui_base_text_size_little"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ui_static_dp_5">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_8"
            android:text="@string/ui_icon_edit"
            android:textColor="@color/textColorHintDark"
            android:textSize="@dimen/ui_base_text_size_large" />

        <com.hlk.hlklib.lib.view.CorneredEditText
            android:id="@+id/ui_tool_view_simple_inputable_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/ui_text_archive_details_comment_hint"
            android:maxLines="5"
            android:padding="@dimen/ui_static_dp_5"
            app:cet_active_border="@color/color_faaa2d"
            app:cet_corner_size="@dimen/ui_static_dp_5"
            app:cet_normal_border="@color/textColorHintLight" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_tool_view_simple_inputable_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_static_dp_5"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_chat_bar_height"
            android:minWidth="65dp"
            android:text="@string/ui_base_text_send"
            android:textColor="@color/ui_text_normal_white"
            android:visibility="gone"
            app:active_color="@android:color/holo_red_dark"
            app:corner_size="@dimen/ui_base_dimen_button_corner_size"
            app:normal_color="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>