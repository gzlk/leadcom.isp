<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start|top"
    android:background="@drawable/nim_message_item_round_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/message_item_archive_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxWidth="@dimen/ui_nim_max_text_bubble_width"
        android:textSize="@dimen/ui_base_text_size_small" />

    <TextView
        android:id="@+id/message_item_archive_summary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_item_archive_title_label"
        android:autoLink="none"
        android:ellipsize="end"
        android:maxLines="3"
        android:maxWidth="@dimen/ui_static_dp_110"
        android:textColor="@color/textColorHint"
        android:textSize="@dimen/ui_base_text_size_small" />

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/message_item_archive_image_control"
        android:layout_width="@dimen/ui_static_dp_50"
        android:layout_height="@dimen/ui_static_dp_50"
        android:layout_below="@+id/message_item_archive_title_label"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:layout_toEndOf="@+id/message_item_archive_summary_label"
        android:visibility="gone"
        app:id_image_scale_type="centerCrop" />
</RelativeLayout>