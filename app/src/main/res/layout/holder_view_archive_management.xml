<?xml version="1.0" encoding="utf-8"?>
<com.hlk.hlklib.lib.view.CorneredView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_archive_management_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ui_base_dimen_margin_padding"
    app:cv_active_border="@color/activeBorderColor"
    app:cv_background="@android:color/white"
    app:cv_background_active="@android:color/white"
    app:cv_normal_border="@android:color/white">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_archive_management_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:text="@string/ui_icon_select_solid"
        android:textColor="@color/textColorHintLightLight" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_holder_view_archive_management_icon_container"
        android:layout_width="@dimen/ui_static_dp_60"
        android:layout_height="@dimen/ui_static_dp_60"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:gravity="center"
        app:cv_background="@color/colorPrimary"
        app:cv_border_size="@dimen/ui_static_dp_zero">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_archive_management_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_icon_attachment_video"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ui_base_text_size_huge" />
    </com.hlk.hlklib.lib.view.CorneredView>

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_holder_view_archive_management_image"
        android:layout_width="@dimen/ui_static_dp_60"
        android:layout_height="@dimen/ui_static_dp_60"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:visibility="gone"
        app:id_image_scale_type="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ui_holder_view_archive_management_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/ui_holder_view_archive_management_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_static_dp_2"
            android:text="@string/app_name"
            android:textColor="@color/textColorHintLight"
            android:textSize="@dimen/ui_base_text_size_little" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_static_dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ui_holder_view_archive_management_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/app_name"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />

            <TextView
                android:id="@+id/ui_holder_view_archive_management_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_little" />
        </LinearLayout>
    </LinearLayout>
</com.hlk.hlklib.lib.view.CorneredView>