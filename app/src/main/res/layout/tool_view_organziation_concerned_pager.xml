<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/ui_static_dp_120"
    android:layout_height="@dimen/ui_static_dp_120"
    android:layout_margin="@dimen/ui_static_dp_10"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="@dimen/ui_static_dp_10"
    app:cardElevation="@dimen/ui_static_dp_5">

    <LinearLayout
        android:id="@+id/ui_tool_organization_concerned_pager_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ui_static_dp_8">

        <com.gzlk.android.isp.lib.view.ImageDisplayer
            android:id="@+id/ui_tool_organization_concerned_pager_logo"
            android:layout_width="@dimen/ui_static_dp_75"
            android:layout_height="@dimen/ui_static_dp_75"
            app:id_image_src="@mipmap/img_image_default"
            app:id_image_type="oval" />

        <TextView
            android:id="@+id/ui_tool_organization_concerned_pager_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_static_dp_5"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:maxLength="8"
            android:text="@string/app_name" />
    </LinearLayout>

</android.support.v7.widget.CardView>