<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/ui_base_dimen_simple_item_height"
    android:orientation="horizontal">

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_tool_attachment_button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
        android:gravity="center"
        android:minWidth="@dimen/ui_static_dp_60"
        android:minHeight="@dimen/ui_static_dp_35"
        android:orientation="horizontal"
        android:paddingTop="@dimen/ui_static_dp_3"
        android:paddingBottom="@dimen/ui_static_dp_3"
        android:visibility="gone"
        app:cv_active_border="@color/colorAccent"
        app:cv_background="@color/colorPrimary"
        app:cv_background_active="@color/colorWord"
        app:cv_background_type="fill"
        app:cv_corner_size="@dimen/ui_static_dp_5"
        app:cv_normal_border="@color/colorPrimary">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_5"
            android:text="@string/ui_icon_upload"
            android:textColor="@color/textColorLight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_base_text_upload"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/ui_base_text_size_short" />
    </com.hlk.hlklib.lib.view.CorneredView>

    <LinearLayout
        android:id="@+id/ui_tool_attachment_upload_used_times"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_static_dp_5"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:visibility="invisible">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_2"
            android:text="@string/ui_icon_alarm"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/ui_base_text_size_short" />

        <TextView
            android:id="@+id/ui_tool_attachment_upload_used_times_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_default"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/ui_base_text_size_little" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_tool_attachment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:gravity="center"
        android:minWidth="@dimen/ui_static_dp_60"
        android:minHeight="@dimen/ui_static_dp_35"
        android:paddingTop="@dimen/ui_static_dp_3"
        android:paddingBottom="@dimen/ui_static_dp_3"
        app:cv_active_border="@color/colorAccent"
        app:cv_corner_size="@dimen/ui_static_dp_5"
        app:cv_normal_border="@color/colorPrimary">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_icon_attachment"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_big" />
    </com.hlk.hlklib.lib.view.CorneredView>
</LinearLayout>