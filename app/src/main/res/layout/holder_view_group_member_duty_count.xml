<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ui_holder_view_group_member_duty_count_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="5"
            android:padding="@dimen/ui_base_dimen_margin_padding"
            android:singleLine="true"
            android:text="@string/app_name_default" />

        <TextView
            android:id="@+id/ui_holder_view_group_member_duty_count_archive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ui_background_clickable"
            android:gravity="center"
            android:padding="@dimen/ui_base_dimen_margin_padding"
            android:text="@string/app_name_default"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_small" />

        <TextView
            android:id="@+id/ui_holder_view_group_member_duty_count_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ui_background_clickable"
            android:gravity="center"
            android:padding="@dimen/ui_base_dimen_margin_padding"
            android:text="@string/app_name_default"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_small" />
    </LinearLayout>

    <include layout="@layout/tool_view_half_line_horizontal" />
</LinearLayout>