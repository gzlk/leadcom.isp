<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <WebView
        android:id="@+id/ui_archive_details_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ui_archive_details_activity_control" />

    <LinearLayout
        android:id="@+id/ui_archive_details_activity_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0"
        android:animateLayoutChanges="true"
        android:background="@color/textColorLight"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        android:visibility="gone">

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_archive_details_activity_deliver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_group_activity_details_deliver"
            android:textColor="@color/textColorLight"
            android:visibility="gone"
            app:active_color="@color/colorExcel"
            app:corner_size="@dimen/ui_static_dp_5"
            app:disable_when_click="false"
            app:normal_color="@color/colorPrimary" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_archive_details_activity_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_group_activity_details_sign_up"
            android:textColor="@color/textColorLight"
            android:visibility="gone"
            app:active_color="@color/colorExcel"
            app:corner_size="@dimen/ui_static_dp_5"
            app:disable_when_click="false"
            app:normal_color="@color/colorPrimary" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_archive_details_activity_leave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_group_activity_details_leave"
            android:textColor="@color/textColorLight"
            android:visibility="gone"
            app:active_color="@color/colorAdobe"
            app:corner_size="@dimen/ui_static_dp_5"
            app:disable_when_click="false"
            app:normal_color="@color/colorPpt" />

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_archive_details_activity_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_group_activity_details_report"
            android:textColor="@color/textColorLight"
            android:visibility="gone"
            app:active_color="@color/colorPrimary"
            app:corner_size="@dimen/ui_static_dp_5"
            app:normal_color="@color/color_3eb135" />
    </LinearLayout>

    <include layout="@layout/tool_view_loading" />
</RelativeLayout>