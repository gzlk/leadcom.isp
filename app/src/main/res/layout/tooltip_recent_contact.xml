<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_tooltip_recent_contact"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/ui_tooltip_menu_recent_contact_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ui_static_dp_5"
        android:text="@string/ui_text_home_recent_contact_context_menu_1"
        android:textColor="@android:color/white" />

    <include layout="@layout/tool_view_half_line_horizontal" />

    <TextView
        android:id="@+id/ui_tooltip_menu_recent_contact_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ui_static_dp_5"
        android:text="@string/ui_text_home_recent_contact_context_menu_2"
        android:textColor="@android:color/white" />
</LinearLayout>