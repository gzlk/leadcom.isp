<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_dialog_button_cancel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:paddingStart="@dimen/ui_static_dp_5"
        android:paddingTop="@dimen/ui_static_dp_5"
        android:paddingEnd="@dimen/ui_static_dp_5"
        android:text="@string/ui_text_archive_creator_editor_attachment_dialog_desc1"
        android:textSize="@dimen/ui_base_text_size_small" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_base_dimen_margin_padding">

            <com.hlk.hlklib.lib.view.CorneredView
                android:id="@+id/ui_popup_rich_editor_attachment_images"
                android:layout_width="@dimen/ui_static_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
                android:translationZ="@dimen/ui_base_translationZ_small"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding"
                app:cv_active_border="@color/colorBorderActive"
                app:cv_border_size="@dimen/ui_base_border_size_normal"
                app:cv_normal_border="@color/textColorHintLight">

                <com.hlk.hlklib.lib.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_icon_rich_editor_multi_image"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_large"
                    app:ctv_active_color="@color/colorPrimary"
                    app:ctv_normal_color="@color/textColorHint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_static_dp_5"
                    android:text="@string/ui_base_text_image"
                    android:textSize="@dimen/ui_base_text_size_short" />
            </com.hlk.hlklib.lib.view.CorneredView>

            <com.hlk.hlklib.lib.view.CorneredView
                android:id="@+id/ui_popup_rich_editor_attachment_videos"
                android:layout_width="@dimen/ui_static_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
                android:translationZ="@dimen/ui_base_translationZ_small"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding"
                app:cv_active_border="@color/colorBorderActive"
                app:cv_border_size="@dimen/ui_base_border_size_normal"
                app:cv_normal_border="@color/textColorHintLight">

                <com.hlk.hlklib.lib.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_icon_rich_editor_movie"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_large"
                    app:ctv_active_color="@color/colorPrimary"
                    app:ctv_normal_color="@color/textColorHint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_static_dp_5"
                    android:text="@string/ui_base_text_video"
                    android:textSize="@dimen/ui_base_text_size_short" />
            </com.hlk.hlklib.lib.view.CorneredView>

            <com.hlk.hlklib.lib.view.CorneredView
                android:id="@+id/ui_popup_rich_editor_attachment_audios"
                android:layout_width="@dimen/ui_static_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
                android:translationZ="@dimen/ui_base_translationZ_small"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding"
                app:cv_active_border="@color/colorBorderActive"
                app:cv_border_size="@dimen/ui_base_border_size_normal"
                app:cv_normal_border="@color/textColorHintLight">

                <com.hlk.hlklib.lib.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_icon_rich_editor_music"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_large"
                    app:ctv_active_color="@color/colorPrimary"
                    app:ctv_normal_color="@color/textColorHint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_static_dp_5"
                    android:text="@string/ui_base_text_audio"
                    android:textSize="@dimen/ui_base_text_size_short" />
            </com.hlk.hlklib.lib.view.CorneredView>

            <com.hlk.hlklib.lib.view.CorneredView
                android:id="@+id/ui_popup_rich_editor_attachment_documents"
                android:layout_width="@dimen/ui_static_dp_60"
                android:layout_height="wrap_content"
                android:elevation="@dimen/ui_base_translationZ_small"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/ui_base_dimen_margin_padding"
                app:cv_active_border="@color/colorBorderActive"
                app:cv_border_size="@dimen/ui_base_border_size_normal"
                app:cv_normal_border="@color/textColorHintLight">

                <com.hlk.hlklib.lib.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_icon_document"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_large"
                    app:ctv_active_color="@color/colorPrimary"
                    app:ctv_normal_color="@color/textColorHint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_static_dp_5"
                    android:text="@string/ui_base_text_document"
                    android:textSize="@dimen/ui_base_text_size_short" />
            </com.hlk.hlklib.lib.view.CorneredView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>