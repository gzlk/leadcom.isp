<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_holder_view_archive_details_additional_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/ui_base_dimen_margin_padding"
    android:paddingStart="@dimen/ui_base_dimen_margin_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ui_tool_view_archive_additional_comment_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingBottom="@dimen/ui_base_dimen_margin_padding"
            android:paddingTop="@dimen/ui_base_dimen_margin_padding"
            android:text="@string/ui_text_archive_details_comment_title"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/ui_base_text_size_small" />

        <LinearLayout
            android:id="@+id/ui_tool_view_archive_additional_like_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/ui_base_dimen_margin_padding"
            android:paddingTop="@dimen/ui_base_dimen_margin_padding">

            <include layout="@layout/tool_view_archive_additional_like" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ui_tool_view_archive_additional_collection_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/ui_base_dimen_margin_padding"
            android:paddingTop="@dimen/ui_base_dimen_margin_padding">

            <include layout="@layout/tool_view_archive_additional_collect" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/ui_holder_view_archive_details_bottom_line"
        layout="@layout/tool_view_half_line_horizontal" />
</LinearLayout>