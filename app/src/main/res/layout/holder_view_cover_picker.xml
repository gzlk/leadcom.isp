<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    android:padding="@dimen/ui_static_dp_5">

    <com.leadcom.android.isp.lib.view.ImageDisplayer
        android:id="@+id/id_holder_view_cover_picker_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_static_dp_150"
        app:id_image_scale_type="centerCrop"
        app:id_image_type="normal" />

    <RelativeLayout
        android:id="@+id/id_holder_view_cover_picker_picker"
        android:layout_width="@dimen/ui_static_dp_50"
        android:layout_height="@dimen/ui_static_dp_50"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
        android:background="@drawable/ui_background_oval_white"
        android:translationZ="@dimen/ui_base_translationZ_small"
        android:visibility="gone">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ui_icon_select_big_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_max" />
    </RelativeLayout>
</RelativeLayout>