<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="expandable_view_container_id" type="id" />
    <item name="expandable_view_handler_id" type="id" />
    <string name="expandable_view_expand_handle_text">展开</string>
    <string name="expandable_view_collapse_handle_text">收起</string>
    <declare-styleable name="ExpandableView">
        <!-- 是否可以显示动画 -->
        <attr name="animatable" format="boolean" />
        <!-- 允许显示最大行数 -->
        <attr name="expandLines" format="integer|reference" />
        <!-- 动画时长 -->
        <attr name="animationDuration" format="integer|reference" />
        <!-- 控制点文本颜色 -->
        <attr name="handlerTextColor" format="color|reference" />
        <!-- 控制点文字大小 -->
        <attr name="handlerTextSize" format="dimension" />
        <!-- 文本内容文字颜色 -->
        <attr name="contentTextColor" format="color|reference" />
        <!-- 文本内容文字大小 -->
        <attr name="contentTextSize" format="dimension" />

        <!-- 展开时控制点文本 -->
        <attr name="expandedText" format="string" />
        <!-- 收缩时控制点文本 -->
        <attr name="collapsedText" format="string" />
    </declare-styleable>
</resources>